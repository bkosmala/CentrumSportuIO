<Window x:Class="CentrumSportu_WPF.Widoki.DodawanieNowegoSprzetuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentrumSportu_WPF.Widoki"
        mc:Ignorable="d"
        Title="Dodawanie nowego sprzętu" Height="141" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label  Content="Nazwa:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NazwaSprzetuTextBox" HorizontalAlignment="Left" Height="23" Margin="90,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194"/>
        <Label  Content="Dostępność:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="DostepnoscComboBox" HorizontalAlignment="Left" Margin="90,45,0,0" VerticalAlignment="Top" Width="194"/>
        <Button x:Name="AnulujButton" Content="Anuluj" HorizontalAlignment="Left" Margin="209,80,0,0" VerticalAlignment="Top" Width="75" Click="AnulujButton_Click"/>
        <Button x:Name="DodajButton" Content="Dodaj" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="75" Click="DodajButton_Click"/>

    </Grid>
</Window>
