<Window x:Class="CentrumSportu_WPF.Widoki.Okno_Zastepstwo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentrumSportu_WPF.Widoki"
        mc:Ignorable="d"
        Title="Ustal zastępstwo" Height="175.423" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="23,10,0,0" TextWrapping="Wrap" Text="Wyślij prośbę o zastępstwo do wybranego instruktora, gdy tylko potwierdzi  prośbę zajęcia zostaną przepięte" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="23,75,0,0" TextWrapping="Wrap" Text="Wybierz instruktora : " VerticalAlignment="Top" Width="124"/>
        <ComboBox x:Name="InstruktorzyComboBox" HorizontalAlignment="Left" Margin="138,75,0,0" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="WyslijButton" Content="Wyślij" HorizontalAlignment="Left" Margin="42,114,0,0" VerticalAlignment="Top" Width="75" Click="WyslijButton_Click"/>
        <Button x:Name="AnulujButton" Content="Anuluj" HorizontalAlignment="Left" Margin="162,114,0,0" VerticalAlignment="Top" Width="75" Click="AnulujButton_Click"/>
    </Grid>
</Window>
