<UserControl x:Class="CentrumSportu_WPF.Widoki.OfertaWidok"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CentrumSportu_WPF.Widoki"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Label x:Name="HeaderLbl" Content="Oferta" 
               HorizontalContentAlignment="Center" FontSize="28"
               Height="84" Margin="10,1,10,0" 
               VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.076"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.499"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TabControl Margin="0,51,0,0">
            <TabItem Header="Dostępne zajęcia">
                <Label Content="Lista:" />
            </TabItem>
            <TabItem Header="Nadchodzące wydarzenia" />
            <TabItem Header="Obiekty sportowe Centrum" />
            <TabItem Header="Wypożyczanie sprzętu sportowego" />
        </TabControl>
    </Grid>
</UserControl>
