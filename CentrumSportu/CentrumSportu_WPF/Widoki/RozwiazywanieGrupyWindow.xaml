<Window x:Class="CentrumSportu_WPF.Widoki.RozwiazywanieGrupyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentrumSportu_WPF.Widoki"
        mc:Ignorable="d"
        Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="WysliPowodButton" Content="Wyślij" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="85"/>
        <Button x:Name="PotwrdzUsuniecieButton" Content="Usuń grupę" HorizontalAlignment="Left" Margin="100,85,0,0" VerticalAlignment="Top" Width="90" Click="PotwrdzUsuniecieButton_Click"/>
        <Button x:Name="AnulujUsuniecieButton" Content="Anuluj" HorizontalAlignment="Left" Margin="195,85,0,0" VerticalAlignment="Top" Width="85" Click="AnulujUsuniecieButton_Click"/>
        <TextBox x:Name="PowodUsunieciaTextBox" HorizontalAlignment="Left" Height="70" Margin="10,10,0,0" TextWrapping="Wrap" Text="Wpisz powód usunięcia grupy" VerticalAlignment="Top" Width="272"/>
    </Grid>
</Window>
