<Window x:Class="CentrumSportu_WPF.Widoki.wybranieGrupy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CentrumSportu_WPF.Widoki"
        mc:Ignorable="d"
        Title="wybranieGrupy" Height="300" Width="526.5">
    <Grid>
        <ListView x:Name="grypyLV" HorizontalAlignment="Left" Height="252" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="30px" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Nazwa" Width="200px" DisplayMemberBinding="{Binding Nazwa}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button" Content="Wybierz" HorizontalAlignment="Left" Margin="334,12,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </Grid>
</Window>
